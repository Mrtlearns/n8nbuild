name: build-and-push-runners
'on':
  push:
    branches:
      - main
permissions:
  contents: read
  packages: write
env:
  IMAGE_NAME: ghcr.io/mrtlearns/n8n-runners-pdflib
  N8N_RUNNERS_TAG: 2.0.1
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Set up Buildx
        uses: docker/setup-buildx-action@v3
      - name: Login to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: '${{ github.actor }}'
          password: '${{ secrets.GITHUB_TOKEN }}'
      - name: Build and push
        uses: docker/build-push-action@v6
        with:
          context: .
          push: true
          build-args: |
            N8N_RUNNERS_TAG=${{ env.N8N_RUNNERS_TAG }}
          tags: |
            ${{ env.IMAGE_NAME }}:latest
            ${{ env.IMAGE_NAME }}:${{ env.N8N_RUNNERS_TAG }}
